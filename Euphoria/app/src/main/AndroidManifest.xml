<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sparta.euphoria">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:usesCleartextTraffic="true"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".SplashActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/app_name"
                android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity"
                  android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.HomeActivity">
        </activity>
        <activity android:name=".Activities.Questionnaires.QuestionnairesActivity">
        </activity>
        <activity android:name=".Activities.Questionnaires.QuestionnaireActivity">
        </activity>
        <activity android:name=".Activities.Diet.DietActivity">
        </activity>
        <activity android:name=".Activities.Diet.DietIndexActivity">
        </activity>
        <activity android:name=".Activities.Diet.DietDetailsActivity">
        </activity>
        <activity android:name=".Activities.Exercises.ExerciseActivity">
        </activity>
        <activity android:name=".Activities.Exercises.ExerciseIndexActivity">
        </activity>
        <activity android:name=".Activities.Exercises.ExerciseViewActivity">
        </activity>

        <activity android:name=".Activities.Timer.SessionsActivity">
        </activity>
        <activity android:name=".Activities.Timer.TimerSetupActivity">
        </activity>
        <activity android:name=".Activities.Timer.AddSessionActivity">
        </activity>
        <activity android:name=".Activities.Timer.SoundsActivity">
        </activity>
        <activity android:name=".Activities.Timer.ShowSessionActivity">
        </activity>
        <activity android:name=".Activities.Timer.TimerCountDownActivity">
        </activity>
    </application>

</manifest>